<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <POutputFilePath>C:\US2020\framework\output</POutputFilePath>
  </PropertyGroup>
  <PropertyGroup>
    <ReferencePath>$(POutputFilePath)</ReferencePath>
  </PropertyGroup>
  <Target Name="PostBuildCopyToOutput" AfterTargets="Build">
    <CreateItem Include="$(MSBuildProjectDirectory)\$(OutputPath)$(AssemblyName).*" Condition="Exists('$(MSBuildProjectDirectory)\$(OutputPath)')">
      <Output TaskParameter="Include" ItemName="FilesToCopy" />
    </CreateItem>
    <CreateItem Include="$(OutputPath)$(AssemblyName).*" Condition="Exists('$(OutputPath)')">
      <Output TaskParameter="Include" ItemName="FilesToCopy" />
    </CreateItem>
    <Message Importance="High" Text="Files To copy  - @(FilesToCopy)	DestinationFolder: $(POutputFilePath) " />
    <Message Importance="High" Text="  DestinationFolder: $(POutputFilePath) " />
    <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(POutputFilePath)" SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" />
  </Target>
</Project>